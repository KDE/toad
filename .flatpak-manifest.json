{
    "id": "org.kde.tasks",
    "runtime": "org.kde.Platform",
    "runtime-version": "6.6",
    "sdk": "org.kde.Sdk",
    "command": "tasks",
    "tags": ["nightly"],
    "desktop-file-name-suffix": " (Nightly)",
    "finish-args": [
        "--share=ipc",
        "--share=network",
        "--socket=fallback-x11",
        "--socket=wayland",
        "--device=dri"
    ],
    "separate-locales": false,

    "modules": [
        {
            "name": "tasks",
            "buildsystem": "cmake-ninja",
            "builddir": true,
            "sources": [
                {
                    "type": "git",
                    "branch": "master",
                    "url": "https://invent.kde.org/utilities/toad.git"
                }
            ]
        }
    ]
}

